{
  "compilerOptions": {
    "target": "es2016",                                 
    // "lib": [],                                        
    "module": "commonjs", 
    "moduleResolution": "node",                             
    "outDir": "./dist",
    "rootDir": "./src",                               
    "strict": true,                                      
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true                                  
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
